{
  "id": "http://streambet.com/email-standard-schema#",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "emailDetails": {
      "type": "object",
      "properties": {
        "from": {
          "type": "string"
        },
        "to": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "cc": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "bcc": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "attachments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "filename": {
                "type": "string"
              },
              "path": {
                "type": "string",
                "format": "uri"
              }
            }
          }
        },
        "subject": {
          "type": "string"
        },
        "html": {
          "type": "string"
        }
      },
      "required": ["to", "from", "subject", "html"]
    },
    "params": {
      "type": "object",
      "required": [
        "streamName",
        "fullName",
        "amount",
        "roundName",
        "convertedSweepCoin",
        "blogPostLink"
      ],
      "properties": {
        "streamName": {
          "type": "string",
          "description": "name of the stream"
        },
        "fullName": {
          "type": "string",
          "description": "username of the user"
        },

        "amount": {
          "type": ["string", "number"],
          "description": "payout amount"
        },
        "roundName": {
          "type": ["string", "number"],
          "description": "name of the round "
        },
        "convertedSweepCoin": {
          "type": ["string", "number"],
          "description": "converted amount of Gold Coin to Stream Coin"
        },
        "blogPostLink": {
          "type": ["string", "number"],
          "description": "link to blog post"
        }
      }
    }
  },
  "required": ["params"]
}
