{
  "id": "http://streambet.com/email-standard-schema#",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "toAddress": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "subject": {
      "type": "string"
    },
    "params": {
      "type": "object",
      "properties": {
        "streamName": {
          "type": "string"
        },
        "fullName": {
          "type": "string"
        },
        "rounds": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "roundName": {
                "type": "string"
              },
              "status": {
                "type": "string",
                "enum": ["won", "lost"]
              },
              "amount": {
                "type": "number"
              },
              "currencyType": {
                "type": "string"
              }
            },
            "required": ["roundName", "status"]
          }
        },
        "dashboardLink": {
          "type": "string"
        }
      },
      "required": ["streamName", "fullName", "rounds", "dashboardLink"]
    }
  },
  "required": ["toAddress", "subject", "params"]
}
